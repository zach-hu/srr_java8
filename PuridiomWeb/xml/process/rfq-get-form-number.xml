<?xml version="1.0" encoding="UTF-8"?>
<process name="rfqGetFormNumber" connection-type="Transaction-Required">
	<activities>
		<activity synchronous="true" continue-on-failure="false" name="getNumberSetup">
			<task synchronous="true" continue-on-failure="false" name="rfqGetNumberSetup">
				<task-object-name>com.tsa.puridiom.rfq.tasks.RfqGetNumberSetup</task-object-name>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="autoGeneratedNumber">
			<rule-filename>is-rfq-number-autogen-required</rule-filename>
			<task synchronous="true" continue-on-failure="false" name="rfqGenerateNumber">
				<task-object-name>com.tsagate.foundation.processengine.InvokePuridiomProcessTask</task-object-name>
				<process-filename>rfq-generate-form-number.xml</process-filename>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="validateRfqNumber">
			<rule-filename>is-rfq-number-validation-required</rule-filename>
			<task synchronous="true" continue-on-failure="false" name="rfqNumber">
				<task-object-name>com.tsa.puridiom.rfq.tasks.RfqValidateNumber</task-object-name>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="rfqHeaderUpdate">
			<task synchronous="true" continue-on-failure="false" name="rfqHeaderUpdate">
				<task-object-name>com.tsagate.foundation.processengine.InvokePuridiomProcessTask</task-object-name>
				<process-filename>rfqheader-update-by-id.xml</process-filename>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="rfqLinesUpdate">
			<task synchronous="true" continue-on-failure="false" name="rfqLineList">			
				<task-object-name>com.tsa.puridiom.rfqline.tasks.RfqLineRetrieveByHeader</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="rfqLineList">
				<task-object-name>com.tsa.puridiom.rfqline.tasks.RfqLineSetRfqNumberFromHeader</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="rfqLineUpdate">			
				<task-object-name>com.tsa.puridiom.rfqline.tasks.RfqLineUpdateEntityList</task-object-name>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="history">
		    <task synchronous="true" continue-on-failure="false" name="rfqHeaderHistory">			
				<task-object-name>com.tsa.puridiom.rfqheader.history.tasks.RfqHeaderHistory</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="rfqLineListHistory">			
				<task-object-name>com.tsa.puridiom.rfqline.history.tasks.RfqLineListHistory</task-object-name>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="recentRfqActivity">
			<rule-filename check-for-false="true">is-rfqheader-buyer-empty.xml</rule-filename>
			<task synchronous="true" continue-on-failure="false" name="recentRfqAdd">
				<task-object-name>com.tsagate.foundation.processengine.InvokePuridiomProcessTask</task-object-name>
				<process-filename>recentrfq-add.xml</process-filename>
			</task>
		</activity>
	</activities>
</process>