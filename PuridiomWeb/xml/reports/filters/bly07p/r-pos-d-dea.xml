<r-pos-d-dea>
  <columns>
  		<PoHeader_poNumber>
			<label>Po Number</label>
			<type>STRING</type>
			<visible>1</visible>
		</PoHeader_poNumber>
		
		<PoHeader_releaseNumber>
			<label>Release Number</label>
			<type>BIGDECIMAL</type>
			<visible>1</visible>
		</PoHeader_releaseNumber>
		
		<PoHeader_revisionNumber>
			<label>Revision Number</label>
			<type>BIGDECIMAL</type>
			<visible>1</visible>
		</PoHeader_revisionNumber>
		
		<PoLine_itemNumber>
			<label>Item Number</label>
			<type>STRING</type>
			<visible>1</visible>
		</PoLine_itemNumber>

		<PoLine_description>
			<label>Description</label>
			<type>STRING</type>
			<visible>1</visible>
		</PoLine_description>

                 <PoHeader_vendorId>
			<label>Vendor Number</label>
			<type>STRING</type>
			<visible>0</visible>
		</PoHeader_vendorId>
		
		<PoHeader_vendorName>
			<label>Vendor Name</label>
			<type>STRING</type>
			<visible>0</visible>
		</PoHeader_vendorName>
		
		<PoHeader_requisitionerCode>
			<label>Requisitioner Code</label>
			<type>STRING</type>
			<visible>0</visible>
		</PoHeader_requisitionerCode>
		
		<PoHeader_buyerCode>
			<label>Buyer Code</label>
			<type>STRING</type>
			<visible>0</visible>
		</PoHeader_buyerCode>

		<PoLine_quantity>
			<label>Quantity</label>
			<type>BIGDECIMAL</type>
			<visible>1</visible>
		</PoLine_quantity>
		
		<PoHeader_shipViaCode>
			<label>shipVia</label>
			<type>STRING</type>
			<visible>1</visible>
		</PoHeader_shipViaCode>	
			
		<PoHeader_poDate>
			<label>Po Date</label>
			<type>DATE</type>
			<visible>1</visible>
		</PoHeader_poDate>
		
		<PoHeader_requiredDate>
			<label>Required Date</label>
			<type>DATE</type>
			<visible>1</visible>
		</PoHeader_requiredDate>
		
		<PoHeader_promisedDate>
			<label>Promised Date</label>
			<type>DATE</type>
		</PoHeader_promisedDate>
		
		<ReceiptHeader_receiptDate>
			<label>Receipt Date</label>
			<type>DATE</type>
			<visible>1</visible>
		</ReceiptHeader_receiptDate>
	</columns>

<sqlfrom>
ReceiptHeader as ReceiptHeader , PoHeader as PoHeader , PoLine as PoLine, ReceiptLine as ReceiptLine
</sqlfrom>
<sqlorderby>PoHeader.poNumber ASC</sqlorderby>
<sqlwhere><![CDATA[
( ReceiptLine.icRecHeader = ReceiptHeader.icRecHeader ) and
( ReceiptLine.icPoLine = PoLine.icPoLine ) and
( PoLine.icPoHeader = PoHeader.icPoHeader )
]]></sqlwhere>
<title>Delivery Analysis Report</title>
</r-pos-d-dea>
