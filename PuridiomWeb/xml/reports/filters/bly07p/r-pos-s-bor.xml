	<sqlfrom>PoHeader as PoHeader, VwBlanketReleases as VwBlanketReleases</sqlfrom>
	<sqlwhere><![CDATA[(PoHeader.status > '3020') and (PoHeader.status < '9020') and ( PoHeader.poDate >= :as_baseReportDate )
