      <visible>1</visible>
    </PoHeader_vendorName>
    <RequisitionHeader_assignedDate>
      <label>Assigned Date</label>
      <type>DATE</type>
      <visible>1</visible>
    </RequisitionHeader_assignedDate>
  </columns>
<sqlfrom>PoHeader as PoHeader, RequisitionHeader as RequisitionHeader</sqlfrom>
<sqlwhere><![CDATA[ ( PoHeader.icReqHeader = RequisitionHeader.icReqHeader (+) ) AND ( PoHeader.lastRevision = 'C' ) AND ( PoHeader.status > '3020' ) AND ( PoHeader.status < '9020' ) AND ( PoHeader.poDate >= :as_baseReportDate ) ]]></sqlwhere>
<sqlorderby>PoHeader.buyerCode ASC, PoHeader.poNumber, PoHeader.releaseNumber</sqlorderby>
<title>Procurement Actions Register (Summary by Buyer)</title>
</procurement-register-buyer>

