		</InvFormData_department>
		<CatalogItem_id_itemNumber>
			<label>Item Number</label>
			<type>STRING</type>
			<visible>1</visible>
		</CatalogItem_id_itemNumber>
		<CatalogItem_description>
			<label>Description</label>
			<type>STRING</type>
			<visible>1</visible>
		</CatalogItem_description>
		<CatalogItem_umCode>
			<label>Unit Of Measure</label>
			<type>STRING</type>
