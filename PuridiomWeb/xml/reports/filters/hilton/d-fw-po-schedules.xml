			<type>STRING</type>
			<visible>1</visible>
		</PoHeader_currencyCode>

  </columns>
  <sqlfrom> PoHeader as PoHeader , Schedule as Schedule </sqlfrom>
  <sqlwhere><![CDATA[
  	( Schedule.id.icHeader = PoHeader.icPoHeader ) and
  	( PoHeader.poDate >= :as_baseReportDate ) and
  	( PoHeader.status >'3020' ) and
  	( PoHeader.status <'9020' ) and
  	( PoHeader.lastRevision = 'C' )
  ]]></sqlwhere>
  <sqlorderby> PoHeader.poNumber , Schedule.id.scheduleType, Schedule.id.lineNumber </sqlorderby>
  <title>Purchase Order Schedules Report</title>
</d-fw-po-schedules>

