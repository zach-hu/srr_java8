<?xml version="1.0" encoding="UTF-8"?>
<validation-rules>
	<validations>
		<save enabled="yes">
			<rule>
				<filename>has-items.xml</filename>
				<alias>Has Lines</alias>
				<msg>You must enter or select at least one item!</msg>
				<severity>E</severity>
				<order>10</order>
				<enabled>Y</enabled>
				<link><![CDATA[javascript: doSubmit('inventory/dsb_items.jsp', 'DisbSetProperty;DisbLineRetrieveByHeader'); void(0);]]></link>
			</rule>
			<rule>
				<filename>has-accounts.xml</filename>
				<alias>Has Accounts</alias>
				<msg>You must enter accounts on the Account Information page or for every line item!</msg>
				<severity>E</severity>
				<order>20</order>
				<enabled>Y</enabled>
				<link><![CDATA[javascript: doSubmit('inventory/dsb_review.jsp', 'DisbSetProperty;DisbursementRetrieve'); void(0);]]></link>
			</rule>
			<rule>
				<filename>dsb-ac01ln-mv.xml</filename>
				<alias>Company</alias>
				<msg>You must enter/select a valid Company for every line item.</msg>
				<severity>E</severity>
				<order>30</order>
				<enabled>Y</enabled>
				<link><![CDATA[javascript: doSubmit('inventory/dsb_items.jsp', 'DisbSetProperty;DisbLineRetrieveByHeader'); void(0);]]></link>
			</rule>
			<rule>
				<filename>dsb-ac02ln-v.xml</filename>
				<alias>AFE</alias>
				<msg>You must enter/select a valid AFE for every line item.</msg>
				<severity>E</severity>
				<order>40</order>
				<enabled>Y</enabled>
				<link><![CDATA[javascript: doSubmit('inventory/dsb_items.jsp', 'DisbSetProperty;DisbLineRetrieveByHeader'); void(0);]]></link>
			</rule>
			<rule>
				<filename>dsb-ac03ln-mv.xml</filename>
				<alias>GL Acct</alias>
				<msg>You must enter/select a valid GL Acct for every line item.</msg>
				<severity>E</severity>
				<order>50</order>
				<enabled>Y</enabled>
				<link><![CDATA[javascript: doSubmit('inventory/dsb_items.jsp', 'DisbSetProperty;DisbLineRetrieveByHeader'); void(0);]]></link>
			</rule>
			<rule>
				<filename>dsb-ac04ln-v.xml</filename>
				<alias>Well Facility </alias>
				<msg>You must enter/select a valid Well/Facility for every line item.</msg>
				<severity>E</severity>
				<order>60</order>
				<enabled>Y</enabled>
				<link><![CDATA[javascript: doSubmit('inventory/dsb_items.jsp', 'DisbSetProperty;DisbLineRetrieveByHeader'); void(0);]]></link>
			</rule>
			<rule>
				<filename>dsb-ac05ln-v.xml</filename>
				<alias>Cost Center</alias>
				<msg>You must enter/select a valid Cost Center for every line item.</msg>
				<severity>E</severity>
				<order>70</order>
				<enabled>Y</enabled>
				<link><![CDATA[javascript: doSubmit('inventory/dsb_items.jsp', 'DisbSetProperty;DisbLineRetrieveByHeader'); void(0);]]></link>
			</rule>
			<rule>
				<filename>dsb-ac02-04-05-header-empty.xml</filename>
				<alias>Accounts</alias>
				<msg>You must enter/select a valid AFE and Well/Facility or a valid Cost Center.</msg>
				<severity>E</severity>
				<order>80</order>
				<enabled>Y</enabled>
				<link><![CDATA[javascript: doSubmit('inventory/dsb_accounts.jsp', 'DisbSetProperty;AccountRetrieveByLine'); void(0);]]></link>
			</rule>
			<rule>
				<filename>dsb-ac02-04-05ln-empty.xml</filename>
				<alias>Accounts line</alias>
				<msg>You must enter/select a valid AFE and Well/Facility or a valid Cost Center in every line item.</msg>
				<severity>E</severity>
				<order>90</order>
				<enabled>Y</enabled>
				<link><![CDATA[javascript: doSubmit('inventory/dsb_items.jsp', 'DisbSetProperty;DisbLineRetrieveByHeader'); void(0);]]></link>
			</rule>
		</save>
	</validations>
</validation-rules>