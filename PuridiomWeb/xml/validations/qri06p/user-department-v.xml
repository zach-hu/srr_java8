<?xml version="1.0" encoding="UTF-8"?>
<rule>
	<clause type="NotEmpty">
		<left-side>
			<source>incomingRequestObjectMethod</source>
			<object>user</object>
			<name>getDepartment</name>
		</left-side>
	</clause>
	<logical-operator>IFTHEN</logical-operator>
	<clause type="lookup">
		<sql> from Department as department where department.departmentCode = '@department@' AND (department.status = '02' OR (department.status = '01' AND department.dateExpires >= @today@))</sql>
		<source>user</source>
		<arguments>
			<name>department</name>
			<source>user</source>
			<colName>getDepartment</colName>
		</arguments>
	</clause>
</rule>
