<browse_po_header>
	<columns>
		<PoHeader_icPoHeader>
	        <hidden>Y</hidden>
	        <visible>0</visible>
		</PoHeader_icPoHeader>
		<PoHeader_poNumber>
			<label>brw-poNumber</label>
			<sort>D</sort>
			<link><![CDATA[javascript: viewPo('#PoHeader_icPoHeader^','#PoHeader_poType^'); void(0);]]></link>
			<size>12</size>
		</PoHeader_poNumber>
		<PoHeader_releaseNumber>
			<label>brw-releaseNumber</label>
			<size>5</size>
		</PoHeader_releaseNumber>
		<PoHeader_poDate>
			<label>brw-poDate</label>
			<type>DATE</type>
			<size>10</size>
		</PoHeader_poDate>
		<PoHeader_requisitionNumber>
			<label>brw-requisitionNumber</label>
			<detail>Y</detail>
			<size>25</size>
		</PoHeader_requisitionNumber>
		<PoHeader_revisionNumber>
			<label>brw-revisionNumber</label>
			<type>NoDecimal</type>
			<size>10</size>
		</PoHeader_revisionNumber>
		<PoHeader_status>
			<label>brw-status</label>
			<type>STATUS</type>
			<size>13</size>
		</PoHeader_status>
		<PoHeader_buyerCode>
			<label>brw-buyer</label>
            <size>18</size>
       		<type>USER-ID</type>
		</PoHeader_buyerCode>
		<PoHeader_total>
			<label>brw-total</label>
			<size>12</size>
			<type>DollarDecimal</type>
		</PoHeader_total>
		<PoHeader_vendorId>
			<label>brw-vendorId</label>
			<detail>Y</detail>
			<size>25</size>
		</PoHeader_vendorId>
		<PoHeader_vendorName>
			<label>brw-vendorName</label>
			<detail>Y</detail>
			<size>50</size>
		</PoHeader_vendorName>
		<PoHeader_requisitionerCode>
			<label>brw-requisitioner</label>
			<detail>Y</detail>
			<size>50</size>
			<type>USER-ID</type>
		</PoHeader_requisitionerCode>
		<PoHeader_departmentCode>
			<label>brw-department</label>
			<detail>Y</detail>
			<size>25</size>
		</PoHeader_departmentCode>
		<PoHeader_internalComments>
			<label>brw-purpose</label>
			<detail>Y</detail>
			<size>100</size>
		</PoHeader_internalComments>
		<PoHeader_expirationDate>
			<label>brw-dateExpires</label>
			<type>DATE</type>
			<visible>0</visible>
		</PoHeader_expirationDate>
		<PoHeader_requiredDate>
			<label>brw-requiredDate</label>
			<type>DATE</type>
			<hidden>Y</hidden>
		</PoHeader_requiredDate>
	</columns>
<sqlfrom>PoHeader as PoHeader</sqlfrom>
<sqlwhere><![CDATA[PoHeader.poNumber <> 'N/A' AND (PoHeader.owner = :as_userid OR PoHeader.buyerCode = :as_userid OR PoHeader.requisitionerCode = :as_userid)  ]]></sqlwhere>
<sqlorderby>PoHeader.poNumber DESC, PoHeader.releaseNumber DESC</sqlorderby>
<pagesize>15</pagesize>
<title>Purchasing Browse</title>
</browse_po_header>