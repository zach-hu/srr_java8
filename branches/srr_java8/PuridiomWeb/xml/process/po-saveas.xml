<?xml version="1.0" encoding="UTF-8"?>
<process name="poSaveas" connection-type="Transaction-Required">
	<activities>
		<activity synchronous="true" continue-on-failure="false" name="poRetrieve">
			<task synchronous="true" continue-on-failure="false" name="poHeader">
				<task-object-name>com.tsa.puridiom.poheader.tasks.PoHeaderRetrieveById</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="poHeaderRetrieveSetup">
				<task-object-name>com.tsa.puridiom.poheader.tasks.PoHeaderRetrieveSetup</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="poLineList">
				<task-object-name>com.tsa.puridiom.poline.tasks.PoLineRetrieveByHeader</task-object-name>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="autoGeneratedNumber">
			<rule-filename check-for-false="true">is-create-revision.xml</rule-filename>
			<task synchronous="true" continue-on-failure="false" name="poGetNumberSetup">
				<task-object-name>com.tsa.puridiom.po.tasks.PoSaveasGetNumberSetup</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="poGenerateNumber">
				<rule-filename>is-po-number-autogen-required.xml</rule-filename>
				<task-object-name>com.tsagate.foundation.processengine.InvokePuridiomProcessTask</task-object-name>
				<process-filename>po-generate-form-number.xml</process-filename>
			</task>
			<task synchronous="true" continue-on-failure="false" name="poNumber">
				<rule-filename check-for-false="true">is-po-newtype-po.xml</rule-filename>
				<task-object-name>com.tsa.puridiom.po.tasks.PoSetPoNumberPrefix</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="poNumber">
				<rule-filename>is-po-number-validation-required.xml</rule-filename>
				<task-object-name>com.tsa.puridiom.po.tasks.PoValidateNumber</task-object-name>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="LoadSupplierInfo">
			<task synchronous="true" continue-on-failure="false" name="blanketIc">
				<rule-filename>is-po-release-order.xml;is-create-revision.xml</rule-filename>
				<task-object-name>com.tsa.puridiom.poheader.tasks.PoHeaderRetrieveById</task-object-name>
				<!-- This task is to avoid change the icPoHeader. -->
				<post-action>exitActivity</post-action>
			</task>
			<task synchronous="true" continue-on-failure="false" name="blanketIc">
				<rule-filename>is-po-release-order.xml</rule-filename>
				<task-object-name>com.tsa.puridiom.po.tasks.PoGetBlanketIc</task-object-name>
				<!-- This task also retrieves vendor_class and puts it in incoming request as PoHeader_vendorClass. -->
				<post-action>exitActivity</post-action>
			</task>
			<task synchronous="true" continue-on-failure="false" name="vendor">
			<rule-filename>is-vendorId-not-empty.xml</rule-filename>
				<task-object-name>com.tsa.puridiom.vendor.tasks.VendorRetrieveById</task-object-name>
		        <post-action />
		    </task>
			<task synchronous="true" continue-on-failure="false" name="PoHeaderSupplierSetup">
				<task-object-name>com.tsa.puridiom.poheader.tasks.PoHeaderLoadSupplierInfo</task-object-name>
		        <post-action />
		    </task>
	    </activity>
		<activity synchronous="true" continue-on-failure="false" name="poSaveas">
			<task synchronous="true" continue-on-failure="false" name="poSaveasSetup">
				<task-object-name>com.tsa.puridiom.po.tasks.PoSaveasSetup</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="poHeaderSaveas">
				<task-object-name>com.tsagate.foundation.processengine.InvokePuridiomProcessTask</task-object-name>
				<process-filename>poheader-saveas.xml</process-filename>
			</task>
			<task synchronous="true" continue-on-failure="false" name="poLineList">
				<task-object-name>com.tsa.puridiom.poline.tasks.PoLineSaveasList</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="setBuyer">
				<task-object-name>com.tsa.puridiom.po.tasks.PoSaveAsSetBuyer</task-object-name>
			</task>
		</activity>
		
		<activity synchronous="true" continue-on-failure="false" name="copySchedule">
			<rule-filename>is-po-blanket-order.xml</rule-filename>
			<task synchronous="true" continue-on-failure="false" name="poHeaderScheduleSaveas">
				<task-object-name>com.tsagate.foundation.processengine.InvokePuridiomProcessTask</task-object-name>
				<process-filename>schedule-saveas.xml</process-filename>
			</task>
		</activity>
		
		<activity synchronous="true" continue-on-failure="false" name="history">
		    <task synchronous="true" continue-on-failure="false" name="poHeaderHistory">
				<task-object-name>com.tsa.puridiom.poheader.history.tasks.PoHeaderHistory</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="poLineListHistory">
				<task-object-name>com.tsa.puridiom.poline.history.tasks.PoLineListHistory</task-object-name>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="newPoRetrieve">
			<task synchronous="true" continue-on-failure="false" name="PoHeader_icPoHeader">
				<task-object-name>com.tsa.puridiom.poheader.tasks.PoHeaderRetrieveNewIc</task-object-name>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="recentOrderActivity">
			<task synchronous="true" continue-on-failure="false" name="recentOrderAdd">
				<task-object-name>com.tsagate.foundation.processengine.InvokePuridiomProcessTask</task-object-name>
				<process-filename>recentorder-add.xml</process-filename>
			</task>
		</activity>
	</activities>
</process>