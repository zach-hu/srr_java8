<?xml version="1.0" encoding="UTF-8"?>
<process name="saleGetFormNumber" connection-type="Transaction-Required">
	<activities>
		<activity synchronous="true" continue-on-failure="false" name="getNumberSetup">
			<task synchronous="true" continue-on-failure="false" name="saleGetNumberSetup">
				<task-object-name>com.tsa.puridiom.sale.tasks.SaleGetNumberSetup</task-object-name>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="autoGeneratedNumber">
			<rule-filename>is-sale-number-autogen-required.xml</rule-filename>
			<task synchronous="true" continue-on-failure="false" name="saleGenerateNumber">
				<task-object-name>com.tsagate.foundation.processengine.InvokePuridiomProcessTask</task-object-name>
				<process-filename>sale-generate-form-number.xml</process-filename>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="validateSaleNumber">
			<rule-filename>is-sale-number-validation-required.xml</rule-filename>
			<task synchronous="true" continue-on-failure="false" name="saleNumber">
				<task-object-name>com.tsa.puridiom.sale.tasks.SaleValidateNumber</task-object-name>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="saleHeaderUpdate">
			<task synchronous="true" continue-on-failure="false" name="saleHeaderUpdate">
				<task-object-name>com.tsagate.foundation.processengine.InvokePuridiomProcessTask</task-object-name>
				<process-filename>saleheader-update-by-id.xml</process-filename>
			</task>
		</activity>
		<activity synchronous="true" continue-on-failure="false" name="saleLineUpdate">
			<task synchronous="true" continue-on-failure="false" name="saleLine">
				<task-object-name>com.tsa.puridiom.saleline.tasks.SaleLineRetrieveByHeader</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="rfqLine">
				<task-object-name>com.tsa.puridiom.saleline.tasks.SaleLineSetSaleNumberFromHeader</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="saleLineUpdate">			
				<task-object-name>com.tsa.puridiom.saleline.tasks.SaleLineUpdateById</task-object-name>
			</task>
		</activity>
		<!--activity synchronous="true" continue-on-failure="false" name="history">
		    <task synchronous="true" continue-on-failure="false" name="saleHeaderHistory">			
				<task-object-name>com.tsa.puridiom.saleheader.history.tasks.SaleHeaderHistory</task-object-name>
			</task>
			<task synchronous="true" continue-on-failure="false" name="saleLineHistory">
				<task-object-name>com.tsa.puridiom.saleline.history.tasks.SaleLineHistory</task-object-name>
			</task>
		</activity-->
	</activities>
</process>