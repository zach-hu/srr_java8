  <sqlfrom> PoHeader as PoHeader, UserProfile as UserProfile, RequisitionHeader as RequisitionHeader, Account as Account</sqlfrom>
  <sqlwhere><![CDATA[ ( PoHeader.icReqHeader *= RequisitionHeader.icReqHeader ) and ( PoHeader.requisitionerCode *= UserProfile.userId ) and ( PoHeader.icPoHeader = Account.id.icHeader ) and ( PoHeader.lastRevision = 'C' ) and ( PoHeader.status > '3020' ) and ( PoHeader.status < '9020' ) and ( PoHeader.poDate >= :as_baseReportDate ) ]]></sqlwhere>
  <sqlorderby>PoHeader.poNumber, PoHeader.releaseNumber</sqlorderby>
