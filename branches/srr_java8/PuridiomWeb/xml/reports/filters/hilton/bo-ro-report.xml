<sqlfrom>PoHeader as PoHeader</sqlfrom>
<sqlwhere>
	<![CDATA[	( PoHeader.poType = 'BO' OR PoHeader.poType = 'RO' OR PoHeader.poType = 'SO' OR PoHeader.poType = 'SB' OR PoHeader.poType = 'SR' ) AND
				( PoHeader.status > '3020' ) AND ( PoHeader.status < '9020' ) AND ( PoHeader.poDate >= :as_baseReportDate ) and
				( PoHeader.lastRevision = 'C' )
	]]></sqlwhere>
<sqlorderby>PoHeader.poNumber DESC, PoHeader.releaseNumber ASC, PoHeader.poDate DESC</sqlorderby>
<title>Blanket Orders and Releases Report</title>
</bo-ro-report>