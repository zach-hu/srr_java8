<?xml version="1.0" encoding="UTF-8"?>
<validation-rules>
	<validations>
    <save enabled="yes">
    	<rule>
        	<filename>amount-compare-total.xml</filename>
			<alias>Compare Total</alias>
			<msg>Invoice Amount must equal Allocated Amount!</msg>
			<severity>E</severity>
			<order>10</order>
			<enabled>Y</enabled>
			<link><![CDATA[javascript: doSubmit('invoice/iv_review.jsp', 'InvoiceRetrieve'); void(0);]]></link>
      	</rule>

      	<rule>
      		<filename>rejectedamount.xml</filename>
      		<alias>If reject code exists so much an amount</alias>
      		<msg>Rejection amount must be entered!</msg>
      		<severity>E</severity>
      		<order>20</order>
      		<enabled>Y</enabled>
      		<link><![CDATA[javascript: doSubmit('invoice/iv_items.jsp', 'InvoiceRetrieve'); void(0);]]></link>
      	</rule>
    </save>
  </validations>
</validation-rules>