<?xml version="1.0" encoding="UTF-8"?>
<validation-rules>
  <validations>
    <save enabled="yes">
		<rule>
			<filename>invitem-commodity.xml</filename>
			<alias>commodity</alias>
			<msg><![CDATA[ You must enter a valid Commodity Code! ]]></msg>
			<severity>E</severity>
			<order>200</order>
			<status></status>
			<enabled>N</enabled>
		</rule>
		<rule>
			<filename>invitem-um.xml</filename>
			<alias>umeasure</alias>
			<msg><![CDATA[ You must enter a valid Unit Of Issue! ]]></msg>
			<severity>E</severity>
			<order>300</order>
			<status></status>
			<enabled>N</enabled>
		</rule>
		<rule>
			<filename>invitem-uorder.xml</filename>
			<alias>uorder</alias>
			<msg><![CDATA[ You must enter a valid Unit Of Order! ]]></msg>
			<severity>E</severity>
			<order>400</order>
			<status></status>
			<enabled>N</enabled>
		</rule>
    </save>
  </validations>
</validation-rules>