<?xml version="1.0" encoding="UTF-8"?>
<validation-rules>
  <validations>
    <save enabled="yes">
    	<rule>
			<filename>packages-and-qtyreceived-not-zero.xml</filename>
			<alias>Packages</alias>
			<msg>if # Packages is greater than 0, Quantity Received must not be 0!</msg>
			<severity>E</severity>
			<order>5</order>
			<enabled>N</enabled>
			<new>true</new>
		</rule>
	    <rule>
	    	<filename>rec-bin-qty-error.xml</filename>
	        <alias>Bin Alloc Error</alias>
	        <msg>Inventory Bin allocation error occurred on the following lines: [@processedErrorText]</msg>
	        <severity>E</severity>
	        <order>10</order>
	        <enabled>Y</enabled>
			<link><![CDATA[javascript: doSubmit('receipts/rec_items.jsp', 'ReceiptLineRetrieveByHeader'); void(0);]]></link>
	    </rule>
	    <rule>
	        <filename>rec-at-least-one-quantityreturned.xml</filename>
	        <alias>atLeastOneQuantiyReturned</alias>
	        <msg>You must return a quantity greater than zero for at least one line!</msg>
	        <severity>E</severity>
	        <order>15</order>
	        <enabled>Y</enabled>
			<link><![CDATA[javascript: doSubmit('receipts/rec_items.jsp', 'ReceiptLineRetrieveByHeader'); void(0);]]></link>
      	</rule>
    </save>
  </validations>
</validation-rules>